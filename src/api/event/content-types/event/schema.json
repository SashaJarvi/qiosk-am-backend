{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "datetime": {
      "type": "datetime",
      "required": true
    },
    "min_price": {
      "type": "integer",
      "required": true
    },
    "max_price": {
      "type": "integer"
    },
    "location_name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "tickets_link": {
      "type": "string",
      "required": true
    },
    "event_category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::event-category.event-category",
      "inversedBy": "events"
    },
    "location_address": {
      "type": "string",
      "required": true
    },
    "short_description": {
      "type": "text",
      "required": true,
      "maxLength": 350
    }
  }
}
